<style is:global>
    .carousel-1{
    background-color: var(--yellow);
    margin-top: -5%;
    box-shadow: var(--shadow);
  }

  .splide__arrow--prev{
    left: -5%;
  }

  .splide__arrow--next{
    right: -5%;
  }

  @media (max-width: 991.98px){
    .splide__arrow--prev{
      display: none;
    }

    .splide__arrow--next{
      display: none;
    }
  }

  .splide__arrow{
    border-radius: 0;
  }

  .splide__pagination{
    bottom: -1.5em;
  }

  .splide__pagination__page.is-active{
    background-color: var(--green) !important;
    opacity: 1;
  }

  .carousel__description{
    width: 75%;
    margin: 0 auto;
  }

  .splide__slide{
    padding: 0 1rem;
  }

  .splide__arrow--prev{
    left: -3em !important;
  }
  .splide__arrow--next{
    right: -3em !important;
  }
</style>