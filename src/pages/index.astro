<style>
  .bg-blue-feather {
    background-color: var(--navy);
    background-image: url("/assets/bg-feather-blue.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    display: flex;
    align-items: start;
    background-attachment: fixed;
    background-position: center;
    background-position-y: 10%;
  }

  @media (max-width: 991.98px){
    .hero {
    background-color: var(--navy);
    background-image: none;
    
    }
  }


  .btn-back-arrow {
    filter: brightness(0);
    transform: rotate(270deg);
    font-size: 10px;
    width: 16px;
  }

  .square {
    list-style: square;
  }

  .advantage-card {
    place-items: center;
  }

  .category {
    min-width: 300px;
  }

  .category button{
    width: 30%;
  }

  @media (max-width: 991.98px){
    .category button{
     width: 100%;
    }

  }

  .nav-link {
    border-radius: 0 !important;
    color: var(--white);
    padding: 8px 32px;
  }

  .nav-link:hover {
    color: var(--white);
  }

  .nav-link.active {
    background-color: var(--green) !important;
    color: var(--black) !important;
    font-weight: bold;
  }

  .nav-item{
    position: relative;
  }

  .nav-link.active::after{
    content: "";
    width: 1px;
    height: 24px;
    display: block;
    position: absolute;
    background-color: var(--gray-200);
    transform-origin: top;
    top: 100%;
    left: 0;
    right: 0;
    margin: 0 auto;
  }

  @media (max-width: 991.98px){
  	.nav-link.active::after{
